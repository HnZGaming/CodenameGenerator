<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0;netstandard1.3;net45;net46</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Colin Smith</Authors>
    <Company />
    <Copyright>2017 Colin Smith</Copyright>
    <PackageTags>codename name generator code username random word codenamegenerator words nouns adjectives firstnames lastnames</PackageTags>
    <PackageProjectUrl>https://github.com/colinmxs/CodenameGenerator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/colinmxs/CodenameGenerator</RepositoryUrl>
    <Description>Codename generator for ASP.NET Core.</Description>
    <Version>1.1.0</Version>
    <PackageReleaseNotes>Added wordbank and constructor options</PackageReleaseNotes>
    <FileVersion>1.0.2.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='netstandard1.0|AnyCPU'">
    <DocumentationFile />
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Files\adjectives.csv" />
    <None Remove="Files\firstnames.csv" />
    <None Remove="Files\lastnames.csv" />
    <None Remove="Files\nouns.csv" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Files\adjectives.csv" />
    <EmbeddedResource Include="Files\firstnames.csv" />
    <EmbeddedResource Include="Files\lastnames.csv" />
    <EmbeddedResource Include="Files\nouns.csv" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard1.0' OR '$(TargetFramework)'=='netstandard1.3'">
    <DefineConstants>FEATURE_TYPE_INFO</DefineConstants>
  </PropertyGroup>  

</Project>